<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flush_Client.Pages.ManageIbsPage"
             Title="Manage Ibs Count">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5,0,5,0" />
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout Margin="20">
        <Label Text="Did you have an attack today?" Margin="30" />
        <!--<Entry Text="{Binding Path=IbsCount.Count}" Placeholder="Enter Name" />-->
        <Button Text="{Binding Path=IbsCount.Count}" Clicked="OnSaveButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
        <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
    </VerticalStackLayout>
</ContentPage>